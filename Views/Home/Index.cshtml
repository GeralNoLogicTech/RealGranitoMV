@{
    ViewData["Title"] = "Visualizador";
}

<head>
    <style>
        #color {
            width: 800px;
            height: 800px;
        }


        button:hover {
            background-color: skyblue;
        }

        button[slot="hotspot-tampo"] {
            --min-hotspot-opacity: 0.5;
            display: block;
            width: 20px;
            height: 20px;
            border-radius: 10px;
            border: none;
            background-color: blue;
            box-sizing: border-box;
        }

        button[slot="hotspot-pernas"] {
            --min-hotspot-opacity: 0.5;
            background-color: blue;
            display: block;
            width: 20px;
            height: 20px;
            border-radius: 10px;
            border: none;
            background-color: blue;
            box-sizing: border-box;
        }
      /*-----------------------------------------------------------------------------------------------------------------------*/
     /*                                                 CSS Menu                                                                       */
    /*-----------------------------------------------------------------------------------------------------------------------*/

        button[slot="hotspot-menupernas"] {
            --min-hotspot-opacity: 0.5;
            border: none; 
        }

        button[slot="hotspot-menutampo"] {
            --min-hotspot-opacity: 0.5;
            border: none;
        }

        #annotation {
            background-color: #888888;
            position: absolute;
            transform: translate(10px, 10px);
            border-radius: 10px;
            padding: 10px;
        }

        /* This keeps child nodes hidden while the element loads */
        :not(:defined)>* {
            display: none;
        }

        #navBar {
            height:100vh;
            width:100%;
            overflow-y: scroll;
            margin: 4px;
        }

        #lazy-load-poster {
                            position: absolute;
                            left: 0;
                            right: 0;
                            top: 0;
                            bottom: 0;
                            background-image: url("models/cilindros.jpg");
                            background-size: contain;
                            background-repeat: no-repeat;
                            background-position: center;
                            }
        #button-load {
                        background-image: url("../../assets/ic_get_app_white_24dp.svg");
                        background-repeat: no-repeat;
                        background-size: 24px 24px;
                        background-position: 6% 50%;
                        background-color: #000;
                        color: white;
                        cursor: pointer;
                        border-radius: 6px;
                        display: inline-block;
                        padding: 10px 18px 9px 40px;
                        font-weight: 500;
                        box-shadow: 0 0 8px rgba(0,0,0,.2), 0 0 4px rgba(0,0,0,.25);
                        position: absolute;
                        left: 50%;
                        top: 50%;
                        transform: translate3d(-50%, -50%, 0);
                        z-index: 100;
                    }
    </style>
    <script src="https://code.jquery.com/jquery-3.5.0.js"></script>
    <!-- Import the component -->
    <script type="module" src="https://unpkg.com/@@google/model-viewer/dist/model-viewer.min.js"></script>
    <!--<script data-main="scripts/app" src="js/require.js"></script>-->
    <!-- Use it like any other HTML element -->
</head>
<div id="modelo3d" class="container" >

                    </div>
                </div>
            </div>
        </div>
        <div id = "Area3d" class="col-9">
            <!-- modelo 3D -->
            <model-viewer id="color" camera-controls interaction-prompt="none" src="models/table.gltf" ar
                ar-modes="webxr scene-viewer quick-look" alt="A 3D model of an astronaut" >

                <button id="hotspot-tampo" slot="hotspot-tampo" class="tampohotspot"
                    data-position="-0.29168182703558376m 1.2298899049779237m 0.5308159749781514m" data-normal="0m 1m 0m" type="button">
                    <div id="annotation">Tampo</div>
                </button>
                <div id="hotspot-menutampo" slot="hotspot-menutampo" class="menutampohotspot"
                    data-position="-0.29168182703558376m 0.7898899049779237m 0.5308159749781514m" data-normal="0m 1m 0m" type="button">
                     <div class="btn-toolbar mb-3" role="toolbar" aria-label="Toolbar with button groups">
                        <div class="btn-group mr-2" role="group" aria-label="First group">
                            <button id="tampoGranito" type="button" class="btn btn-secondary tampo">Granito</button>
                            <button id="tampoMadeira" type="button" class="btn btn-secondary tampo">Madeira</button>
                        </div>
                    </div>
                </div>

                <button id="hotspot-pernas" slot="hotspot-pernas" class="pernashotspot"
                    data-position="-0.3750164531753165m 0.57111201106937173m 1.8649118583158697m"
                    data-normal="0.4195957639467187m 0m 0.9077110745595041m" type="button">
                    <div id="annotation">Pernas</div>
                </button>
                <div id="hotspot-menupernas" slot="hotspot-menupernas" class="menupernashotspot"
                    data-position="-0.3750164531753165m 0.21111201106937173m 1.8649118583158697m"
                    data-normal="0.4195957639467187m 0m 0.9077110745595041m" type="button">
                    <div class="btn-toolbar mb-3" role="toolbar" aria-label="Toolbar with button groups">
                        <div class="btn-group mr-2" role="group" aria-label="First group">
                            <button id="pernasGranito" type="button" class="btn btn-secondary pernas">Granito</button>
                            <button id="pernasMadeira" type="button" class="btn btn-secondary pernas">Madeira</button>
                        </div>
                    </div>
                </div>
                
            </model-viewer - viewer>
        </div>
    </div>
 </div>

<script>



  //----------------------------------------------------------------------------------------------------------------------------------
 //                                                SECCÇÃO PARA CARREGAR O MODELO 3D E MUDAR A TEXTURA
//------------------------------------------------------------------------------------------------------------------------------------

    $("div.menutampohotspot").hide();
    $("div.menupernashotspot").hide();

    $("#hotspot-tampo").click(function(){
        $("div.menupernashotspot").hide();
        $("div.menutampohotspot").show();
    })

    $("#hotspot-pernas").click(function(){
        $("div.menupernashotspot").show();
        $("div.menutampohotspot").hide();
    })
    
    //$("button.tampohotspot").click
    //Mudar o tampo para granito
    document.querySelector('#tampoGranito').addEventListener('click', (event) => { // evento disparado ao clicar no botão tampoGranito
        $.getJSON("models/table.gltf", function (json) { //ir buscar o ficheiro gltf e coloca-lo no objeto json
            console.log(json); //teste para imprimir o objeto na consola
            json.meshes[0].primitives[1].material = 1; // mudar o material para granito
            var jsoncodificado_src = "data:application/json;base64," + btoa(JSON.stringify(json)); // codificar o JSON para poder ser usado no SRC, 
            $('#color').attr('src', jsoncodificado_src); //colocar o json com o material alterado no atributo SRC do modelviewer, permitindo atualizar em tempo real
        });

    });

    //Mudar o tampo para madeira
    document.querySelector('#tampoMadeira').addEventListener('click', (event) => {
        $.getJSON("models/table.gltf", function (json) {
            console.log(json);
            json.meshes[0].primitives[1].material = 0;
            var jsoncodificado_src = "data:application/json;base64," + btoa(JSON.stringify(json));
            $('#color').attr('src', jsoncodificado_src);
        });
    });

    //Mudar as pernas para granito
    document.querySelector('#pernasGranito').addEventListener('click', (event) => {
